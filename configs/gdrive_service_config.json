{
  "research_folder_id": "SHARED_FOLDER_ID_HERE",
  "upload_mode": "incremental",
  "batch_size_mb": 5,
  "retry_attempts": 3,
  "retry_delay_seconds": 60,
  "compress_before_upload": true,
  "delete_after_upload": false,
  "upload_schedule": {
    "enabled": true,
    "interval_minutes": 30,
    "quiet_hours": {
      "enabled": false,
      "start": "02:00",
      "end": "06:00"
    }
  },
  "file_naming": {
    "pattern": "{hardware_id}_{date}_{sequence}.csv",
    "include_session_category": true
  },
  "notes": "Replace SHARED_FOLDER_ID_HERE with the actual Google Drive folder ID for research data collection"
}
